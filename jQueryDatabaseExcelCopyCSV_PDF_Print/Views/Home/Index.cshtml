@model IEnumerable<jQueryDatabaseExcelCopyCSV_PDF_Print.Models.EmployeeViewModel>
@{
    ViewBag.Title = "Home Page";
    Layout = null;
}

<br /><br />

<table class="table table-striped"id="MyData">
    <thead>
        <tr>
            <td>EmployeeId</td>
            <td>EmployeeName</td>
            <td>Email</td>
            <td>Phone</td>
            <td>Experience</td>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                if (item.Experience < 5)
                {
                    <tr>
                        <td>@item.EmployeeId</td>
                        <td>@item.EmployeeName</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>@item.Experience</td>
                    </tr>

                }
                else
                {
                    <tr>
                        <td>@item.EmployeeId</td>
                        <td>@item.EmployeeName</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>@item.Experience</td>
                    </tr>
                }

            }
        }

    </tbody>
</table>

